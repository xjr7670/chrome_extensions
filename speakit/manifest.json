{
  "manifest_version": 2,

  "name": "SpeakIt",
  "description": "Search Wikipedia on the go!",
  "version": "1.0",
  "icons": {
    "128": "./images/icon128.png",
    "48": "./images/icon48.png",
    "16": "./images/icon16.png"
  },

  "background": {
    "scripts": ["./js/eventPage.js"],
    "persistent": false
  },

  "permissions": [  
          "tts",      
          "contextMenus"
        ]
}